@model Product

 @{
    ViewData["Title"] = "Details of " + Model.ProductName;
}

@* <div>
    <h1>@ViewBag.PageTitle  </h1>
</div> *@

<div class="card-wrapper">
    <div class="card-details">
        <!-- card left -->
        <div class="product-imgs">
            <div class="img-display">
                <div class="img-showcase">
                    <img class="img-def" src="@Url.Content("~/"+Model.Picture)" alt="shoe image">
                    <img class="img-def" src="@Url.Content("~/"+Model.Picture)" alt="shoe image">
                    <img class="img-def" src="@Url.Content("~/"+Model.Picture)" alt="shoe image">
                    <img class="img-def" src="@Url.Content("~/"+Model.Picture)" alt="shoe image">
                </div>
            </div>
            <div class="img-select">
                <div class="img-item">
                    <a href="#" data-id="1">
                        <img class="img-def" src="@Url.Content("~/"+Model.Picture)" alt="shoe image">
                    </a>
                </div>
                <div class="img-item">
                    <a href="#" data-id="2">
                        <img class="img-def" src="@Url.Content("~/"+Model.Picture)" alt="shoe image">
                    </a>
                </div>
                <div class="img-item">
                    <a href="#" data-id="3">
                        <img class="img-def" src="@Url.Content("~/"+Model.Picture)" alt="shoe image">
                    </a>
                </div>
                <div class="img-item">
                    <a href="@Model.ProductId" data-id="4">
                        <img class="img-def" src="@Url.Content("~/"+Model.Picture)" alt="shoe image">
                    </a>
                </div>
            </div>
        </div>
        <!-- card right -->
        <div class="product-content">
            <h2 class="product-title">@Model.ProductName</h2>
            @* <a href="#" class="product-link">visit nike store</a> *@
            <div class="product-rating">
                <p class="fas fa-star">⭐⭐⭐</p>
@*                 <i class="fas fa-star">⭐</i>
                <i class="fas fa-star">⭐</i>
                <i class="fas fa-star"></i> 
                <i class="fas fa-star-half-alt"></i> *@
                <span>4.7(21)</span>
            </div>

            <div class="product-price">
                <p class="last-price">Old Price: <span>₹@Model.UnitPrice</span></p>

                <p class="new-price">New Price: <span>₹@ViewBag.new_price (@Model.Discount%)</span></p>
            </div>

            <div class="product-detail">    
                <h2>about this item: </h2>
                <p>@Model.Description</p>
                
                <ul>
                    @* <li>Color: <span>Black</span></li>
                    <li>Available: <span>in stock</span></li>
                    <li>Category: <span>Shoes</span></li>
                    <li>Shipping Area: <span>All over the world</span></li>
                    <li>Shipping Fee: <span>Free</span></li> *@
                    <li>Category: <span>@Model.Category</span></li>
                    <li>Manufacturing Date: <span>@Model.ManufacturingDate</span></li>
                    <li>Return Policy: <span>@Model.ReturnPolicy</span></li>
                    <li>Gender: <span>@Model.Gender</span></li>
                    <li>Warranty Period: <span>@Model.WarrantyPeriod</sp></li>
                    <li>Type: <span>@Model.ShoeType</span></li>
                  

                </ul>
            </div>

            <div class="purchase-info">
                <input type="number" min="0" value="1">
                <a type="button" class="btn" asp-area="Carts" asp-controller="Home" asp-action="AddToCart" asp-route-productId="@Model.ProductId">
                    Add to Cart <i class="fas fa-shopping-cart"></i>
                </a>
                @* <button type="button" class="btn">Compare</button> *@
            </div>

            
        </div>
    </div>
</div>


